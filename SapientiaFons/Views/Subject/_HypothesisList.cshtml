@model IEnumerable<SapientiaFons.Models.Hypothesis>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Crear Nueva", "Create", "Hypothesis", new { subjectId = ViewBag.SubjectId }, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsValid)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsValid)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", "Hypothesis", new { id = item.Id }, null) |
            @Html.ActionLink("Detalles", "Details", "Hypothesis", new { id = item.Id }, null) |
            @Html.ActionLink("Borrar", "Delete", "Hypothesis", new { id = item.Id }, null)
        </td>
    </tr>
}

</table>
