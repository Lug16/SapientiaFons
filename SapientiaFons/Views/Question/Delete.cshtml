@model SapientiaFons.Models.Question

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>¿Estas seguro que quieres eliminar esta pregunta?</h3>
<div>
    <h4>Esto es irreversible</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayName("Hipótesis")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hypothesis.Description)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-default" /> |
            @Html.ActionLink("Volver a la lista", "Details", "Subject", new { id = Model.SubjectId }, null)
        </div>
    }
</div>
